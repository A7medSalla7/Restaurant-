<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="793.0" prefWidth="1530.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication23.ReceptionistController">
    <top>
        <HBox prefHeight="92.0" prefWidth="1547.0" spacing="30.0" style="-fx-background-color: #0f6a6b; -fx-padding: 15;">
            <Label alignment="CENTER" prefHeight="54.0" prefWidth="569.0" text="Receptionist Dashboard" textFill="WHITE">
            <font>
               <Font name="Arial Bold" size="36.0" />
            </font></Label>
            <Region prefHeight="62.0" prefWidth="502.0" HBox.hgrow="ALWAYS" />
         <Button alignment="BOTTOM_LEFT" onAction="#logout" prefHeight="44.0" prefWidth="118.0" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Logout">
            <font>
               <Font size="15.0" />
            </font>
            <graphic>
               <ImageView fitHeight="36.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/logout.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
            <Button fx:id="closeBtn" onAction="#handleClose" prefHeight="42.0" prefWidth="127.0" style="-fx-background-color: #797878; -fx-text-fill: white;" text="Close">
            <font>
               <Font size="17.0" />
            </font>
            <graphic>
               <ImageView fitHeight="29.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@Images/Close.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <padding>
            <Insets top="15.0" />
         </padding>
        </HBox>
    </top>
    
    <left>
        <VBox style="-fx-background-color: #f0f0f0; -fx-spacing: 30; -fx-padding: 15;">
            <Button onAction="#ShowIndoor" prefHeight="70.0" prefWidth="150.0" style="-fx-background-color: #0f6a6b; -fx-text-fill: white; -fx-pref-width: 200;" text="Indoor Order">
            <font>
               <Font size="23.0" />
            </font></Button>
            <Button onAction="#ShowOutdoor" prefHeight="70.0" prefWidth="150.0" style="-fx-background-color: #0f6a6b; -fx-text-fill: white; -fx-pref-width: 200;" text="Outdoor Order">
            <font>
               <Font size="23.0" />
            </font></Button>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentPane" prefHeight="702.0" prefWidth="1299.0">
         <children>
            <Label alignment="CENTER" prefHeight="114.0" prefWidth="252.0" text="Nothing to show here" textFill="#00000047">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
         </children></StackPane>
    </center>
</BorderPane>
