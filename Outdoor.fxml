<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="1320.0" spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxapplication23.ReceptionistController">
    <HBox alignment="CENTER_LEFT" spacing="10"> 
        <Label style="-fx-font-weight: bold;" text="Sort By:" />
        <ComboBox fx:id="companyComboBox" prefWidth="150.0" />
        <TextField fx:id="companySearchField" prefWidth="300" promptText="Search companies..." />
        <Button fx:id="companySearchButton" onAction="#Search" prefHeight="26.0" prefWidth="81.0" style="-fx-background-color: #0f6a6b; -fx-text-fill: white;" text="Search">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/search.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <HBox prefHeight="31.0" prefWidth="425.0" />
      <Button fx:id="companySearchButton1" onAction="#BuyOutdoor" prefHeight="38.0" prefWidth="154.0" style="-fx-background-color: #0f6a6b; -fx-text-fill: white;" text="Check Out">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Images/basket-cart-icon-27.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    </HBox>
    
    <TableView fx:id="companyTable" prefHeight="674.0" prefWidth="1287.0">
        <columns>
            <TableColumn fx:id="ActionsColumn" prefWidth="84.00003069639206" text="Actions" />
            <TableColumn fx:id="IdColumn" minWidth="-1.0" prefWidth="116.79998779296875" text="ID" />
            <TableColumn fx:id="ProductColumn" prefWidth="521.6000061035156" text="Product Name" />
            <TableColumn fx:id="PriceColumn" prefWidth="148.79998779296875" text="price" />
            <TableColumn fx:id="CategoryColumn" prefWidth="253.59991455078125" text="Category" />
            <TableColumn fx:id="StatusColumn" prefWidth="162.400146484375" text="Status" />
        </columns>
    </TableView>
    
    <Pagination fx:id="companyPagination" maxPageIndicatorCount="5" />
</VBox>
